<!-- Navbar -->
<nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
    <div class="container">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">
            <img src="~/adminLte3/img/Logo.png" alt="DigiCV Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">DigiCV</span>
        </a>

        <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse order-3" id="navbarCollapse">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a id="dropdownSubMenu2"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Tool</a>
                    <ul aria-labelledby="dropdownSubMenu2" class="dropdown-menu border-0 shadow">
                        <li><a asp-controller="Template" asp-action="Index" class="dropdown-item">Create CV</a></li>
                        <li><a asp-controller="Letter" asp-action="Index" class="dropdown-item">Create Cover Letter</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
                </li>
                @if (ViewBag.SpecificActionCompleted != null && ViewBag.SpecificActionCompleted
                && ViewBag.IsCurrentUser != null && ViewBag.IsCurrentUser)
                {

                    <li class="nav-item">
                        <a asp-controller="Builder" asp-action="GetPdf" asp-route-Id="@ViewBag.IdForPDF" asp-route-PDFTemplateName="@ViewBag.PDFTemplateName" class="nav-link text-shadow">
                            <i class="fa fa-arrow-circle-down" aria-hidden="true"></i> Download CV
                        </a>
                    </li>
                    <li class="nav-item">
                        <input id="shareLink" type="text" value="https://localhost:7092/resume/share/@ViewBag.Username/@ViewBag.ResumeTitle" hidden />
                         <a href="#" onclick="shareLink()" class="nav-link">
                            <i class="fa fa-regular fa-copy" aria-hidden="true"></i> Share
                        </a>
                    </li>
                }
            </ul>
            <!-- Right navbar links -->
            <div class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                <!-- Add Right Navbar link -->
                <partial name="_LoginPartial" />
            </div>
