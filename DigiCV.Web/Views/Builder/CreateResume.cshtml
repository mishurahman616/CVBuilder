@{
    ViewData["Title"] = "CreateResume";
}

@section Styles{
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-6F4XBR/aaZI6vEbKT4WzLrnQ2v7a1PS8jXdqW7pOE3M4Vof+uWlvR2TdV6NeJ1qzD4F1y3Or4k/Zp5i+ZmA2KNA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .section {
            background-color: #fff; /* Background color of the section */
            padding: 20px; /* Add padding to create space between content and shadow */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Box shadow */
            border-radius: 10px; /* Rounded corners for the section */
        }
    </style>
}
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <section class="feature-card shadow-lg">
                    <div class=" bg-opacity-100 my-5">
                        <div class="row g-0">
                            <div class="card-body text-center">
                                <partial name="_ResponsePartial" />
                                <br><br>
                                <a asp-controller="Template" asp-action="Index" class="btn btn-primary px-3 py-2 my-3"><i class="fas fa-sync-alt"></i> Create CV Again</a>
                                <a asp-controller="Builder" asp-action="GetResume" asp-route-Id="@ViewBag.IdFromCreateResume"> </a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div><!-- services /.container-fluid -->
</div>

